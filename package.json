{
  "name": "neo-electron",
  "version": "1.0.0",
  "description": "NEO electron app",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "start": "pnpm run build && electron-forge start",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -t semver -u",
    "package": "pnpm run build && electron-forge package",
    "make": "pnpm run build && electron-forge make"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~13.2.0-next.847.a8ce22a",
    "@axonivy/prettier-config": "~13.2.0-next.847.a8ce22a",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@types/adm-zip": "^0.5.7",
    "electron": "^37.3.1",
    "typescript": "^5.9.2"
  },
  "prettier": "@axonivy/prettier-config"
}
